{% extends 'template.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}

<div class="container">
    <ol class="breadcrumb">
        <li><a href="/">Accueil</a></li>
        <li class="active">page contact</li>
    </ol>
    <div class="row">
        <article class="col-xs-12 maincontent">
            <header class="page-header">
                <h1 class="page-title">Nous contacter</h1>
            </header>
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {% for error in errors %}
                            <div class="alert alert-danger">
                                <strong>{{ error }}</strong>
                            </div>
                        {% endfor %}
                        {% if succes %}
                            <div class="alert alert-success">
                                <strong>{{ succes }}</strong>
                            </div>
                        {% endif %}
                        <form method="post" action="">
                            <div class="row top-margin">
                            <div class="col-sm-6">
                                <label for="login">Pseudo <span class="text-danger">*</span></label>
                                <input type="text" id="email" name="login" class="form-control" value="{{ post.login }}" required>
                            </div>

                                <div class="col-sm-6">
                                    <label for="password1">sujet <span class="text-danger">*</span></label>
                                    <input type="text" id="password1" name="password" class="form-control" required>
                                </div>
                            </div>
                                <div class="top-margin">
                                    <textarea name="content" id="content" cols="77" rows="10"></textarea>
                                </div>

                            <hr>
                            <div class="row">
                                <div class="col-lg-8">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <button class="btn btn-action" name="submit" type="submit">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>

{% endblock %}